import CharlesImage from "../assets/img/charles-annoni.jpg";
import logoGDM from "../assets/img/logo-gdm-white.svg";
import NovaImage from "../assets/img/nova.png";
import logoAden from "../assets/img/logo-aden-formation.png";
import logoLesClapiottes from "../assets/img/logo-les-clapiottes.png";
import logoMDS from "../assets/img/logo-my-digital-school.png";
import logoBoutiqueChientChat from "../assets/img/logo-atout-chat-chien.png";
import logoOpenMindInnovation from "../assets/img/logo-open-mind-innovation.png";
