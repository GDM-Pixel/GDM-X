<script>
	function attachTabClickHandlers() {
		const tabs = document.querySelectorAll(".tabbtn");
		tabs.forEach((tab) => {
			tab.removeEventListener("click", handleTabClick); 
			tab.addEventListener("click", (event) => handleTabClick(event));
		});
	}
	//@ts-ignore
	function handleTabClick(event) {
		const clickedTab = event.currentTarget;
		const targetId = clickedTab.getAttribute("data-target"); // Utilisez un attribut de données pour la cible
		const tabs = document.querySelectorAll(".tabbtn");
		const tabContents = document.querySelectorAll(".tabcontentEl");

		tabs.forEach((tab) => {
			if (tab.getAttribute("data-target") === targetId) {
				tab.classList.add("active");
			} else {
				tab.classList.remove("active");
			}
		});

		tabContents.forEach((tabContent) => {
			tabContent.classList.toggle("active", tabContent.id === targetId);
		});
	}

	attachTabClickHandlers();
	// Attachez les gestionnaires d'onglets lorsque le DOM est prêt
	document.addEventListener("DOMContentLoaded", attachTabClickHandlers);
	// Réattachez les gestionnaires d'onglets sur les événements de navigation d'Astro
	document.addEventListener("astro:page-load", attachTabClickHandlers);
</script>
